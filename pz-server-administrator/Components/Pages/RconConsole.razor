@page "/rcon"
@rendermode @(new InteractiveServerRenderMode())

<PageTitle>RCON Console - Project Zomboid Server Administrator</PageTitle>

<FluentStack Orientation="Orientation.Vertical" VerticalGap="20">
    <FluentCard>
        <FluentStack Orientation="Orientation.Vertical" VerticalGap="10">
            <FluentLabel Typo="Typography.H3">
                <FluentIcon Value="@(new Icons.Regular.Size24.Code())" />
                Consola RCON
            </FluentLabel>
            <FluentLabel Typo="Typography.Body">
                Ejecuta comandos remotos en el servidor Project Zomboid mediante RCON.
            </FluentLabel>
        </FluentStack>
    </FluentCard>

    <FluentCard>
        <FluentStack Orientation="Orientation.Vertical" VerticalGap="15">
            <FluentLabel Typo="Typography.H5">
                <FluentIcon Value="@(new Icons.Regular.Size20.Warning())" />
                Módulo en Desarrollo
            </FluentLabel>
            <FluentLabel Typo="Typography.Body">
                Esta funcionalidad será implementada en el Módulo 6 según el plan de desarrollo.
            </FluentLabel>
            <FluentLabel Typo="Typography.Body">
                Características planificadas:
            </FluentLabel>
            <FluentStack Orientation="Orientation.Vertical" VerticalGap="5">
                <FluentLabel Typo="Typography.Body">• Conexión al servidor por RCON</FluentLabel>
                <FluentLabel Typo="Typography.Body">• Envío de comandos como estado del servidor, mensajes, reinicio</FluentLabel>
                <FluentLabel Typo="Typography.Body">• Consola embebida con historial de comandos</FluentLabel>
                <FluentLabel Typo="Typography.Body">• Visualización de logs de respuesta</FluentLabel>
                <FluentLabel Typo="Typography.Body">• Control de acceso según rol de usuario</FluentLabel>
            </FluentStack>
        </FluentStack>
    </FluentCard>

    <FluentCard>
        <FluentStack Orientation="Orientation.Vertical" VerticalGap="10">
            <FluentLabel Typo="Typography.H6">
                <FluentIcon Value="@(new Icons.Regular.Size16.Info())" />
                Requisitos de Acceso
            </FluentLabel>
            <FluentLabel Typo="Typography.Body">
                Esta funcionalidad requiere permisos de Moderador o Administrador.
            </FluentLabel>
        </FluentStack>
    </FluentCard>
</FluentStack>

@code {
    // Implementation will be added in Module 6
}