@page "/database"
@rendermode InteractiveServer

<PageTitle>Database Explorer - Project Zomboid Server Administrator</PageTitle>

<FluentStack Orientation="Orientation.Vertical" VerticalGap="20">
    <FluentCard>
        <FluentStack Orientation="Orientation.Vertical" VerticalGap="10">
            <FluentLabel Typo="Typography.H3">
                <FluentIcon Value="@(new Icons.Regular.Size24.Database())" />
                Explorador de Base de Datos
            </FluentLabel>
            <FluentLabel Typo="Typography.Body">
                Explora y consulta la base de datos SQLite del servidor Project Zomboid.
            </FluentLabel>
        </FluentStack>
    </FluentCard>

    <FluentCard>
        <FluentStack Orientation="Orientation.Vertical" VerticalGap="15">
            <FluentLabel Typo="Typography.H5">
                <FluentIcon Value="@(new Icons.Regular.Size20.Warning())" />
                Módulo en Desarrollo
            </FluentLabel>
            <FluentLabel Typo="Typography.Body">
                Esta funcionalidad será implementada en el Módulo 7 según el plan de desarrollo.
            </FluentLabel>
            <FluentLabel Typo="Typography.Body">
                Características planificadas:
            </FluentLabel>
            <FluentStack Orientation="Orientation.Vertical" VerticalGap="5">
                <FluentLabel Typo="Typography.Body">• Conexión segura a archivo SQLite del servidor</FluentLabel>
                <FluentLabel Typo="Typography.Body">• Lectura de tablas: players, logs, etc.</FluentLabel>
                <FluentLabel Typo="Typography.Body">• Componente DataGrid con filtros y ordenamiento</FluentLabel>
                <FluentLabel Typo="Typography.Body">• Información de jugadores (posición, inventario, conexión)</FluentLabel>
                <FluentLabel Typo="Typography.Body">• Estadísticas generales del servidor</FluentLabel>
                <FluentLabel Typo="Typography.Body">• Log de eventos del servidor</FluentLabel>
            </FluentStack>
        </FluentStack>
    </FluentCard>

    <FluentCard>
        <FluentStack Orientation="Orientation.Vertical" VerticalGap="10">
            <FluentLabel Typo="Typography.H6">
                <FluentIcon Value="@(new Icons.Regular.Size16.Shield())" />
                Permisos de Acceso
            </FluentLabel>
            <FluentLabel Typo="Typography.Body">
                • Lectura: Disponible para Moderadores y Administradores
            </FluentLabel>
            <FluentLabel Typo="Typography.Body">
                • Escritura: Solo Administradores (funcionalidad futura)
            </FluentLabel>
        </FluentStack>
    </FluentCard>
</FluentStack>

